<!DOCTYPE html>
<html>
<head>
	<title>Cafeteira IOT</title>

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
	<link rel="stylesheet" type="text/css" href="/home.css">
</head>
<body>
	<section class="container-fluid">
		<div class="flex-row">
			<div class="col-4">
				<h1>Cafeteira IOT</h1>	
			</div>
		</div>

		<div class="row">
			<div class="col-4">
				<label for="hora" class="form-control-label">Hora de Ligar</label>
				<a href="/selecionaHorario" class="btn btn-secondary btn-lg" id="hora">Selecionar</a>
			</div>
		</div>

		<div class="row">
			<div class="col-4">
				<label id="resultado-label">Hor√°rios Selecionados para ligar:</label>
				<ul id="horarios">
					<% for(let h of hours) { %>
					<form method="POST" action="/delete/<%=h.hour%>?_method=DELETE">
					<li><%=h.hour%> <button class="btn btn-sm btn-outline-danger x">X</button></li>
					</form>
					<% } %>
				</ul>
			</div>
		</div>	
	</section>
	

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
	<script type="text/javascript" src="home.js"></script>
</body>
</html>